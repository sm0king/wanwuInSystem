mixin infoList(lt,rt)
  li.list-group-item.info-item
    .left-txt= lt
    .right-content.text-right.addImage#addImage= rt 
      | >
  
ul.list-group
  + infoList('头像','新增')
  li.list-group-item.info-item
    .left-txt.txt-red 超市名称
    .right-content 
      input#marketName.form-control
  p
  li.list-group-item.info-item
    .left-txt 联系人
    .right-content 
      input#linkman.form-control
  li.list-group-item.info-item
    .left-txt 联系电话
    .right-content 
      input#phone.form-control(type="tel")
  li.list-group-item.info-item
    .left-txt.txt-red 地址
    .right-content 
      select#provinces.select.form-control
        option 省
      select#city.select.form-control
        option 市
      select#district.select.form-control
        option 区
  li.list-group-item.info-item
    .left-txt
    .right-content 
      input#street.form-control.address
      i.glyphicon.glyphicon-map-marker.point#point
  p
  li.list-group-item.info-item
    .left-txt 超市规模
    .right-content 
      select#scale.form-control
        option(value="1") 小卖部
        option(value="2") 小型独立超市
        option(value="3") 中型独立超市
        option(value="4") 连锁超市
        option(value="5") 饭店
        option(value="0") 其他
  li.list-group-item.info-item
    .left-txt 经营状况
    .right-content 
      select#state.form-control
        option(value="1") 好
        option(value="2") 中
        option(value="3") 差
        option(value="0") 无法判断
  li.list-group-item.info-item
    .left-txt 备注
    .right-content 
      textarea#remark.form-control
